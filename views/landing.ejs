<%include partials/header%>

<div class="container">
    <div class="jumbotron">
      <div class="contents">
        <h1>Find Textbooks</h1>
        <p>Buy textbooks from other students, at a fraction of the price!</p>
        <p>
            <div class="input-group">
            <input type="text" class="form-control" placeholder="Search by textbook name, ISBN, author">
            <span class="input-group-btn">
            <button class="btn btn-success" type="button">Enter</button>
            </span>
          </div>
        </p>
      </div>
    </div>

    <div class="row" id="stats">Overall Stats</div>
    <div class="row">
        <ul >
        <li>Books sold (this month vs last month): <b><%= percentDiff %> % Increase </b></li>
        <li>Total Books sold last month: <b><%= countLastMonth %></b></li>
        <li>Total Books sold this month: <b><%= countCurrentMonth %></b></li>
        </ul>
    </div>
</div>
<%include partials/footer%>
